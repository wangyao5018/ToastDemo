<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToastDefaultText">
        <item name="android:text">Default</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingTop">13.5dp</item>
        <item name="android:paddingBottom">13.5dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ToastDefaultRootLayout">
        <item name="android:background">@drawable/toast_bg_success</item>
    </style>
    <!-- Base style for animations.  This style specifies no animations. -->
    <style name="Animation" />

    <style name="Animation.Pull" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/toast_pull_enter</item>
        <item name="android:windowExitAnimation">@anim/toast_pull_exit</item>
    </style>

</resources>